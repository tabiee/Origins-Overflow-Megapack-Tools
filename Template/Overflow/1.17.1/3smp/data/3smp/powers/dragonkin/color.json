{
    "type": "origins:action_on_callback",
    "execute_chosen_when_orb": true,
    "entity_action_chosen": {
        "type": "origins:and",
        "actions": [
            {
                "type": "origins:execute_command",
                "permission_level": 4,
                "command": "team add darkpurple"
            },
            {
                "type": "origins:execute_command",
                "permission_level": 4,
                "command": "team modify darkpurple color dark_purple"
            }
        ]
    },
    "entity_action_added": {
        "type": "origins:delay",
        "action": {
            "type": "origins:execute_command",
            "permission_level": 4,
            "command": "team join darkpurple @s"
        },
        "ticks": 1
    },
    "entity_action_lost": {
        "type": "origins:execute_command",
        "permission_level": 4,
        "command": "team leave @s"
    },
    "hidden": true
}